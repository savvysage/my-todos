<!DOCTYPE html>
<html lang="en">
    <head>
        <title>My Todos</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/assets/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/styles.css">
    </head>
    <body>
        <div class="container">
            <div class="row mt-5">
                <div class="col-sm">
                    <div class="container">
                        <div class="row justify-content-center"><h1 class="display-4 font-weight-bold title">My Todos</h1></div>
                        <div class="row justify-content-center">
                            <form id="todo" class="form-inline">
                                <label class="sr-only" for="todo-item">Todo Item:</label>
                                <input id="todoInput" type="text" class="form-control" placeholder="What do you want to do?">
                                <button type="submit" class="btn btn-primary">Go</button>
                            </form>
                        </div>
                        <div class="row mt-5 mb-5 mx-auto w-50">
                            <ul id="todoList" class="list-group w-100">
                                <% todos.forEach((value, index) => { %>
                                    <li class="list-group-item" data-key="<%= index %>"><%= value %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/assets/jquery.min.js"></script>
        <script src="/assets/bootstrap.bundle.min.js"></script>
        <script src="/assets/script.js"></script>
    </body>
</html>